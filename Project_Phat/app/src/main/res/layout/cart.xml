<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingConstraints"
    android:background="@color/green_light">
    <ImageView
        android:id="@+id/back_button"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:src="@drawable/back_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/cart"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="Giỏ hàng"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"
        app:layout_constraintTop_toBottomOf="@id/cart"
        app:layout_constraintStart_toStartOf="parent"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="630dp"
        app:layout_constraintBottom_toTopOf="@id/re1"
        app:layout_constraintTop_toBottomOf="@id/view"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/rounded">

                <ImageView
                    android:id="@+id/img_food"
                    android:layout_width="124dp"
                    android:layout_height="119dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="29dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/lautao" />

                <TextView
                    android:id="@+id/food_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="152dp"
                    android:text="Lẩu táo, sâm đất"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/img_food"
                    app:layout_constraintTop_toTopOf="@+id/img_food" />

                <TextView
                    android:id="@+id/textAdd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="152dp"
                    android:layout_marginTop="36dp"
                    android:hint="Rau thêm"
                    app:layout_constraintStart_toStartOf="@+id/img_food"
                    app:layout_constraintTop_toTopOf="@+id/img_food" />

                <TextView
                    android:id="@+id/textAdd1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="152dp"
                    android:layout_marginTop="72dp"
                    android:hint="Bún thêm"
                    app:layout_constraintStart_toStartOf="@+id/img_food"
                    app:layout_constraintTop_toTopOf="@+id/img_food" />

                <ImageView
                    android:id="@+id/img_note"
                    android:layout_width="15dp"
                    android:layout_height="17dp"
                    android:layout_marginStart="152dp"
                    android:layout_marginTop="104dp"
                    app:layout_constraintStart_toStartOf="@+id/img_food"
                    app:layout_constraintTop_toTopOf="@+id/img_food"
                    app:srcCompat="@drawable/notes" />

                <TextView
                    android:id="@+id/add_note"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:hint="Thêm ghi chú"
                    android:textSize="11dp"
                    app:layout_constraintStart_toStartOf="@+id/img_note"
                    app:layout_constraintTop_toTopOf="@+id/img_note" />

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="16dp"
                    android:text="590.000đ"
                    android:textColor="@color/green"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/food_name" />

                <ImageView
                    android:id="@+id/minus"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_marginStart="148dp"
                    android:layout_marginTop="32dp"
                    android:background="@drawable/rounded1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/img_note"
                    app:srcCompat="@drawable/baseline_horizontal_rule_24" />

                <ImageView
                    android:id="@+id/add"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_marginEnd="32dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/rounded1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/edit"
                    app:srcCompat="@drawable/baseline_add_24" />

                <TextView
                    android:id="@+id/number_food"
                    android:layout_width="56dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/button_black"
                    android:gravity="center"
                    android:text="02"
                    android:textSize="19dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/minus" />

                <ImageView
                    android:id="@+id/delete"
                    android:layout_width="15dp"
                    android:layout_height="19dp"
                    android:layout_marginTop="116dp"
                    android:layout_marginEnd="24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/price"
                    app:srcCompat="@drawable/bin" />

                <ImageView
                    android:id="@+id/edit"
                    android:layout_width="15dp"
                    android:layout_height="19dp"
                    android:layout_marginEnd="20dp"
                    app:layout_constraintEnd_toStartOf="@+id/delete"
                    app:layout_constraintTop_toTopOf="@+id/delete"
                    app:srcCompat="@drawable/edit_text" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/rounded">

                <ImageView
                    android:id="@+id/img_food1"
                    android:layout_width="124dp"
                    android:layout_height="119dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="29dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/comhaplasen1" />

                <TextView
                    android:id="@+id/food_name1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="152dp"
                    android:text="Cơm hấp lá sen"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/img_food1"
                    app:layout_constraintTop_toTopOf="@+id/img_food1" />

                <TextView
                    android:id="@+id/textAdd2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="152dp"
                    android:layout_marginTop="36dp"
                    android:hint="Size S"
                    app:layout_constraintStart_toStartOf="@+id/img_food1"
                    app:layout_constraintTop_toTopOf="@+id/img_food1" />


                <ImageView
                    android:id="@+id/img_note1"
                    android:layout_width="15dp"
                    android:layout_height="17dp"
                    android:layout_marginStart="152dp"
                    android:layout_marginTop="104dp"
                    app:layout_constraintStart_toStartOf="@+id/img_food1"
                    app:layout_constraintTop_toTopOf="@+id/img_food1"
                    app:srcCompat="@drawable/notes" />

                <TextView
                    android:id="@+id/add_note1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:hint="Thêm ghi chú"
                    android:textSize="11dp"
                    app:layout_constraintStart_toStartOf="@+id/img_note1"
                    app:layout_constraintTop_toTopOf="@+id/img_note1" />

                <TextView
                    android:id="@+id/price1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="16dp"
                    android:text="220.000đ"
                    android:textColor="@color/green"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/food_name1" />

                <ImageView
                    android:id="@+id/minus1"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_marginStart="148dp"
                    android:layout_marginTop="32dp"
                    android:background="@drawable/rounded1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/img_note1"
                    app:srcCompat="@drawable/baseline_horizontal_rule_24" />

                <ImageView
                    android:id="@+id/add1"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_marginEnd="32dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/rounded1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/edit1"
                    app:srcCompat="@drawable/baseline_add_24" />

                <TextView
                    android:id="@+id/number_food1"
                    android:layout_width="56dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/button_black"
                    android:gravity="center"
                    android:text="02"
                    android:textSize="19dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/minus1" />

                <ImageView
                    android:id="@+id/delete1"
                    android:layout_width="15dp"
                    android:layout_height="19dp"
                    android:layout_marginTop="116dp"
                    android:layout_marginEnd="24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/price1"
                    app:srcCompat="@drawable/bin" />

                <ImageView
                    android:id="@+id/edit1"
                    android:layout_width="15dp"
                    android:layout_height="19dp"
                    android:layout_marginEnd="20dp"
                    app:layout_constraintEnd_toStartOf="@+id/delete1"
                    app:layout_constraintTop_toTopOf="@+id/delete1"
                    app:srcCompat="@drawable/edit_text" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="79dp"
                android:layout_marginTop="12dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_themmon"
                    android:layout_width="129dp"
                    android:layout_height="41dp"
                    android:layout_marginStart="140dp"
                    android:background="@drawable/button_black"
                    android:text="Thêm món"
                    android:textColor="#717572"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="370dp"
                    android:layout_height="1dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="17dp"
                    android:background="@color/grey"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/btn_themmon" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="315dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Tổng cộng"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="810.000đ"
                    android:textColor="@color/green"
                    android:textSize="16dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="104dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/button_green"
                    android:text="Thanh toán"
                    android:textColor="@color/white"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:id="@+id/re1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_nav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp"
            android:background="@color/main"
            app:menu="@menu/nav_item" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>